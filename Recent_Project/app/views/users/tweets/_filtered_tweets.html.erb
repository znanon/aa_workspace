<h1>Tweets</h1>

<div class="tweets-container">
  <% @tweets.each do |tweet| %>
    <div class="post">
      <div class="col-1">
        <%= image_tag "Scottish-fold-cat-feline.jpg", :class => 'img-container'%>
      </div>
      <div class="col-2">
        <strong><%= tweet.tweeter.username %></strong>
      </div>
      <div class="col-3">
      </div>
      <div class="col-all">
        <%= tweet.body %>
      </div>
    </div>
    <% tweet.sub_tweets.each do |sub_tweet| %>
      <div class="post">
        <div class="col-1">
          <%= image_tag "Scottish-fold-cat-feline.jpg", :class => 'img-container'%>
        </div>
        <div class="col-2">
          <strong><%= sub_tweet.tweeter.username %></strong>
        </div>
        <div class="col-3">
        </div>
        <div class="col-all">
          <%= sub_tweet.body %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>